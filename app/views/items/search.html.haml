= render 'header'

.search-container
  .search-container__l-content
    .search-container__l-content__items
      %header.search-container__l-content__items__head
        = "検索結果 #{@items.length}件"
      .search-container__l-content__items__result
        .items-box-parent
          - @items.each do |item|
            .items-box-child
              = link_to "" do
                .child-image
                  - item.images.first(1).each do |image|
                    =image_tag(image.image, class: "first-image")
                .child-content
                  %h3.child-content__name
                    = item.name
                  .child-content__bottom
                    .child-content__bottom__price
                      = "¥#{item.price}"
                    .child-content__bottom__likes
                      %i.fa.fa-heart
                        %span
                          8
                  .child-content__tax
                    (税込)
  .search-container__l-side



= render 'app-banner'
= render 'footer'
