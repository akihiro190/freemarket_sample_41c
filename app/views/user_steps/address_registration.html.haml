.single-container
  .single-container__sign-up-header
    %h1
      =link_to "" do
        =image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?4136293187")
    %nav.single-container__sign-up-header__bar
      %ol.single-container__sign-up-header__bar__flex
        %li.single-container__sign-up-header__bar__flex__content
          会員情報
          .single-container__sign-up-header__bar__flex__content__progress-status-first
        %li.single-container__sign-up-header__bar__flex__content
          電話番号認証
          .single-container__sign-up-header__bar__flex__content__progress-status
        %li.single-container__sign-up-header__bar__flex__content
          住所入力
          .single-container__sign-up-header__bar__flex__content__progress-status
        %li.single-container__sign-up-header__bar__flex__content
          支払い方法
          .single-container__sign-up-header__bar__flex__content__progress-status
        %li.single-container__sign-up-header__bar__flex__content
          完了
          .single-container__sign-up-header__bar__flex__content__progress-status-last
  .single-container__sign-up-main
  %section.single-container__sign-up-main__container
    %h2.single-container__sign-up-main__container__head
      住所入力
    .single-container__sign-up-main__container__form
      = form_for(@user, url: wizard_path) do |f|
        .single-container__sign-up-main__container__form__content
          .single-container__sign-up-main__container__form__content__group
            .single-container__sign-up-main__container__form__content__group__lavel
            = f.label :お名前
            %span.single-container__sign-up-main__container__form__content__group__require 必須
            = f.text_field :last_name, id: :last_name, placeholder: "例）山田"
            = f.text_field :first_name, id: :first_name, placeholder: "例）彩"
          .single-container__sign-up-main__container__form__content__group
            .single-container__sign-up-main__container__form__content__group__lavel
            = f.label :お名前カナ
            %span.single-container__sign-up-main__container__form__content__group__require 必須
            = f.text_field :last_name, id: :last_name, placeholder: "例）ヤマダ"
            = f.text_field :last_name, id: :last_name, placeholder: "例）アヤ"
          .single-container__sign-up-main__container__form__content__group
            .single-container__sign-up-main__container__form__content__group__lavel
            = f.label :郵便番号
            %span.single-container__sign-up-main__container__form__content__group__require 必須
            = f.text_field :postcode, id: :postcode, placeholder: "例）123-4567"
          .single-container__sign-up-main__container__form__content__group
            .single-container__sign-up-main__container__form__content__group__lavel
            = f.label :都道府県
            %span.single-container__sign-up-main__container__form__content__group__require 必須
            = f.select :prefecture, [['---'], ['北海道'], ['青森県'], ['岩手県'], ['宮城県'], ['秋田県'], ['山形県'], ['福島県'], ['茨城県'], ['栃木県'], ['群馬県'], ['埼玉県'], ['千葉県'], ['東京都'], ['神奈川県'], ['新潟県'], ['富山県'], ['石川県'], ['福井県'], ['山梨県'], ['長野県'], ['岐阜県'], ['静岡県'], ['愛知県'], ['三重県'], ['滋賀県'], ['京都府'], ['大阪府'], ['兵庫県'], ['奈良県'], ['和歌山県'], ['鳥取県'], ['島根県'], ['岡山県'], ['広島県'], ['山口県'], ['徳島県'], ['香川県'], ['愛媛県'], ['高知県'], ['福岡県'], ['佐賀県'], ['長崎県'], ['熊本県'], ['大分県'], ['宮崎県'], ['鹿児島県'], ['沖縄県']]
          .single-container__sign-up-main__container__form__content__group
            .single-container__sign-up-main__container__form__content__group__lavel
            = f.label :市区町村
            %span.single-container__sign-up-main__container__form__content__group__require 必須
            = f.text_field :city, id: :city, placeholder: "例）横浜市緑区"
          .single-container__sign-up-main__container__form__content__group
            .single-container__sign-up-main__container__form__content__group__lavel
            = f.label :番地
            %span.single-container__sign-up-main__container__form__content__group__optional 任意
            = f.text_field :block, id: :block, placeholder: "例）青山1-1-1"
          .single-container__sign-up-main__container__form__content__group
            .single-container__sign-up-main__container__form__content__group__lavel
            = f.label :建物名
            %span.single-container__sign-up-main__container__form__content__group__optional 任意
            = f.text_field :building, id: :building, placeholder: "例）柳ビル103"
          = f.submit "次へ進む", class: "btn-default btn-red"
=render "./items/purchase_footer"
